{
  "name": "fndebrid",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/rhom6us/fndebrid.git",
  "author": "Thomas Butler <thomas@butler.software>",
  "license": "MIT",
  "scripts": {
    "i": "yarn add",
    "reinstall": "yarn install --force",
    "typecheck": "lerna exec --parallel -- tsc --noemit",
    "build:main": "yarn workspace @fndebrid/electron-main run compile",
    "watch:main": "yarn workspace @fndebrid/electron-main run watch",
    "build:renderer": "yarn workspace @fndebrid/electron-renderer run compile",
    "watch:renderer": "yarn workspace @fndebrid/electron-renderer run watch",
    "serve:renderer": "yarn workspace @fndebrid/electron-renderer run serve",
    "watch:fnwebpack": "yarn workspace @fndebrid/webpack run compile:watch"
  },
  "build": {
    "files": [
      "dist/",
      "package.json"
    ]
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@types/*/**"
    ]
  },
  "dependencies": {
    "react-hot-loader": "^4.12.15"
  },
  "devDependencies": {

    "lerna": "^3.18.3"
    
  }
}
