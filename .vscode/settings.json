{
  "files.exclude": {
    ".github": true,
    ".gitignore": true,
    ".yarn": true,
    ".yarnrc": true,
    "**/node_modules/": true,
    "dist/": true,
    "LICENSE": true,
    "yarn-error.log": true,
    "yarn.lock": true
  },
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "npm.exclude": "packages/**",
  "npm.packageManager": "yarn",
  "files.associations": {
    "tslint.json": "jsonc"
  },
  "search.exclude": {
    "packages/webpack/lib/": true
  },
  "importSorter.sortConfiguration.customOrderingRules.rules": [
    {
      "regex": "^[@]",
      "orderLevel": 0
    }
  ],
  "importSorter.importStringConfiguration.maximumNumberOfImportExpressionsPerLine.count": 180
}
