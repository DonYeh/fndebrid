{
  "name": "fndebrid",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/rhom6us/fndebrid.git",
  "author": "Thomas Butler <thomas@butler.software>",
  "license": "MIT",
  "main": "dist/main/main.js",
  "scripts": {
    "typecheck": "lerna exec --parallel -- tsc --noemit",
    "nodemon": "nodemon --watch dist/main/ --ignore src/ --exec \"electron  --remote-debugging-port=9223 . --debug\"",
    "dist": "yarn build && electron-builder",
    "dist:broke": "yarn compile && electron-builder --config config/electron-builder.config.json",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "build:renderer": "cross-env TS_NODE_PROJECT=\"webpack/tsconfig.json\" webpack --progress --colors --config webpack/renderer.ts",
    "watch:renderer": "cross-env TS_NODE_PROJECT=\"webpack/tsconfig.json\" webpack-dev-server --config webpack/renderer.ts  --info-verbosity none",
    "build:main": "cross-env TS_NODE_PROJECT=\"webpack/tsconfig.json\" webpack --progress --colors --config webpack/main.ts",
    "watch:main": "cross-env TS_NODE_PROJECT=\"webpack/tsconfig.json\" webpack --watch --progress --colors --config webpack/main.ts --info-verbosity verbose"
  },
  "build": {
    "files": [
      "dist/",
      "package.json"
    ]
  },
  "browserslist": [
    "electron 6.0.12",
    "current node"
  ],
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "react-hot-loader": "^4.12.15"
  },
  "devDependencies": {
    
    "lerna": "^3.18.3"
    
  }
}
