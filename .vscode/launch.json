{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Compound",
      "configurations": ["native", "Attach - Electron: Renderer"]
    }
  ],
  "configurations": [
    {
      "name": "native",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "build-main",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
      },
      "runtimeArgs": ["--remote-debugging-port=9223", "."],
      "env": {
          "NODE_ENV": "development"
      },
      "outputCapture": "std",
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/dist/**/*.js"],
      "skipFiles": [
        "node_modules/**",
        "<node_internals>/Events.js",
        "**/async_hooks.js"
      ]
    },
    {
      "name": "Attach - Electron: Renderer",
      "type": "chrome",
      "request": "attach",
      "preLaunchTask": "watch-renderer",
      "port": 9223,
      "webRoot": "${workspaceRoot}",
      "timeout": 15000,
      "sourceMaps": true
    },
    {
      "name": "yarn: Renderer",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/yarn/bin/yarn.js",
      "args": ["watch:renderer"],
      "autoAttachChildProcesses": true,
      "stopOnEntry": false
    },
    {
      "name": "Webpack-dev-server: Renderer",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/webpack-dev-server/bin/webpack-dev-server.js",
      "args": ["--progress","--colors", "--config", "webpack.config.renderer.babel.js"],
      "autoAttachChildProcesses": true,
      "stopOnEntry": false,
      
      "env": {
          "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./~/*": "${workspaceRoot}/node_modules/*",
        "webpack:///./*": "${workspaceRoot}/*",
        "webpack:///*": "*"
      }
      
    },
    {
      "name": "Webpack-cli: Renderer",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/webpack-cli/bin/cli.js",
      "args": ["--config", "webpack.config.renderer.babel.js"],
      "outFiles": ["${workspaceRoot}/dist/**/*.js"],
      "autoAttachChildProcesses": true,
      "stopOnEntry": false
    }
  ]
}
