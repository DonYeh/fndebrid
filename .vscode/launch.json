{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Compound main",
      "configurations": ["monitor main", "Attach - Electron: Renderer"],
      "timeout": 100000
    }
  ],
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Electron Main",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "program": "${workspaceFolder}/dist/main.js",
      "runtimeArgs": ["--remote-debugging-port=9223", "--debug"],
      "restart": true,
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "true"
      },
      "outputCapture": "std",
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/dist/main.js"],
      "skipFiles": ["node_modules/**", "<node_internals>/Events.js", "**/async_hooks.js"],
      "sourceMapPathOverrides": {
        "webpack:///./*": "${workspaceRoot}/packages/electron-main/*",
        "webpack:///../*": "${workspaceRoot}/packages/*"
      }
    },
    {
      "name": "monitor main",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "watch main",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/nodemon",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/nodemon.cmd"
      },
      "args": [
        "--signal",
        "SIGUSR2",
        "--debug",
        "--watch",
        "dist/main/",
        "--ignore",
        "src/",
        "--exec",
        "\"${workspaceRoot}/node_modules/.bin/electron.cmd --remote-debugging-port=9223 . --debug\""
      ],
      "restart": true,
      "env": {
        "DEBUG": "true"
      },
      "outputCapture": "std",
      "sourceMaps": true,
      "skipFiles": ["node_modules/**", "<node_internals>/Events.js", "**/async_hooks.js"],
      "timeout": 100000
    },
    // {
    //   "name": "Webpack Main",
    //   "type": "node",
    //   "request": "launch",
    //   "cwd": "${workspaceRoot}",
    //   "program": "${workspaceFolder}/node_modules/webpack/bin/webpack.js",
    //   "args": [
    //     "--progress",
    //     "--colors",
    //     "--watch",
    //     "--config",
    //     "webpack/main.babel.js"
    //   ],
    //   "autoAttachChildProcesses": true,
    //   "stopOnEntry": false
    // },
    {
      "name": "native",
      "type": "node",
      "request": "launch",
      // "preLaunchTask": "build main",
      "cwd": "${workspaceRoot}/packages/electron-main",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
      },
      "runtimeArgs": ["--remote-debugging-port=9223", ".", "--debug"],
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "true"
      },
      "outputCapture": "std",
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/dist/**/*.js"],
      "skipFiles": ["node_modules/**", "<node_internals>/Events.js", "**/async_hooks.js"]
    },
    {
      "name": "Attach - Electron: Renderer",
      "type": "chrome",
      "request": "attach",
      "port": 9223,
      "webRoot": "${workspaceRoot}",
      "timeout": 150000,
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./*": "${workspaceRoot}/packages/electron-renderer/*",
        "webpack:///../*": "${workspaceRoot}/packages/*"
      }
    },
    {
      "name": "yarn: Renderer",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/yarn/bin/yarn.js",
      "args": ["watch:renderer"],
      "autoAttachChildProcesses": true,
      "stopOnEntry": false
    },
    // {
    //   "name": "Webpack-dev-server: Renderer",
    //   "type": "node",
    //   "request": "launch",
    //   "program": "${workspaceFolder}/node_modules/webpack-dev-server/bin/webpack-dev-server.js",
    //   "args": [
    //     "--progress",
    //     "--colors",
    //     "--config",
    //     "webpack.config.renderer.babel.js"
    //   ],
    //   "autoAttachChildProcesses": true,
    //   "stopOnEntry": false,

    //   "env": {
    //     "NODE_ENV": "development"
    //   },
    //   "sourceMaps": true,
    //   "sourceMapPathOverrides": {
    //     "webpack:///./~/*": "${workspaceRoot}/node_modules/*",
    //     "webpack:///./*": "${workspaceRoot}/*",
    //     "webpack:///*": "*"
    //   }
    // },
    {
      "name": "Webpack-cli: Renderer",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/webpack-cli/bin/cli.js",
      "args": ["--config", "webpack.config.renderer.babel.js"],
      "outFiles": ["${workspaceRoot}/dist/**/*.js"],
      "autoAttachChildProcesses": true,
      "stopOnEntry": false
    }
  ]
}
